{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "Components/*": [
        "src/app/components/*"
      ],
      "Hooks/*": [
        "src/app/hooks/*"
      ],
      "Pages/*": [
        "src/app/pages/*"
      ],
      "Interfaces/*": [
        "src/app/data/interfaces/*"
      ],
      "Utils/*": [
        "src/app/utils/*"
      ],
      "Data/*": [
        "src/app/data/*"
      ]
    },
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src",
    "electron"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
